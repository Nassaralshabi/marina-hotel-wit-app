{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "lib": ["es2020"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["node", "@playwright/test"],
    "typeRoots": [
      "./node_modules/@types",
      "./node_modules/@playwright/test/types"
    ]
  },
  "include": [
    "tests/**/*"
  ]
}