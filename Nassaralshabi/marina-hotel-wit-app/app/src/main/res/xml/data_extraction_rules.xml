<?xml version="1.0" encoding="utf-8"?>
<!-- Marina Hotel - Data Extraction Rules for Android 12+ -->
<data-extraction-rules>
    <cloud-backup>
        <!-- Exclude sensitive data from cloud backup -->
        <exclude domain="database" />
        <exclude domain="shared_prefs" path="secure_prefs.xml" />
        <exclude domain="files" path="keystore/" />
        <exclude domain="files" path="sensitive_data/" />
        
        <!-- Include user preferences (non-sensitive) -->
        <include domain="shared_prefs" path="user_settings.xml" />
        <include domain="shared_prefs" path="app_preferences.xml" />
    </cloud-backup>
    
    <device-transfer>
        <!-- Rules for device-to-device transfer -->
        <exclude domain="database" />
        <exclude domain="shared_prefs" path="secure_prefs.xml" />
        <exclude domain="files" path="keystore/" />
        
        <!-- Allow user settings transfer -->
        <include domain="shared_prefs" path="user_settings.xml" />
        <include domain="shared_prefs" path="app_preferences.xml" />
    </device-transfer>
</data-extraction-rules>