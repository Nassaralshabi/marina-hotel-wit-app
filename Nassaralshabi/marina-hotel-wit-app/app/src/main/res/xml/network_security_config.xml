<?xml version="1.0" encoding="utf-8"?>
<!-- Marina Hotel - Network Security Configuration -->
<network-security-config>
    <domain-config cleartextTrafficPermitted="false">
        <!-- Production API - HTTPS only -->
        <domain includeSubdomains="true">api.marina-hotel.com</domain>
        
        <!-- Staging API - HTTPS only -->
        <domain includeSubdomains="true">staging-api.marina-hotel.com</domain>
        
        <!-- Pin certificates for production (optional but recommended) -->
        <pin-set expiration="2025-12-31">
            <!-- SHA256 of your server's certificate public key -->
            <!-- Replace with actual certificate pins -->
            <pin digest="SHA-256">AAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAA=</pin>
            <!-- Backup pin -->
            <pin digest="SHA-256">BBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBB=</pin>
        </pin-set>
        
        <!-- Trust anchors -->
        <trust-anchors>
            <certificates src="system"/>
        </trust-anchors>
    </domain-config>

    <!-- Development and testing - Allow cleartext for local development only -->
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="true">dev-api.marina-hotel.com</domain>
        <domain includeSubdomains="true">localhost</domain>
        <domain includeSubdomains="true">127.0.0.1</domain>
        <domain includeSubdomains="true">10.0.2.2</domain>
        <domain includeSubdomains="true">192.168.1.1</domain>
        <domain includeSubdomains="false">10.0.0.57</domain>
    </domain-config>
    
    <!-- Debug configurations (only for debug builds) -->
    <debug-overrides>
        <trust-anchors>
            <certificates src="user"/>
            <certificates src="system"/>
        </trust-anchors>
    </debug-overrides>
</network-security-config>