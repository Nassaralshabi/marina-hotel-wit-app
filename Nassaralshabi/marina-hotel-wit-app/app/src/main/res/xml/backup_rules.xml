<?xml version="1.0" encoding="utf-8"?>
<full-backup-content>
    <!--
        Include or exclude specific domains or files from full backup.
        Default: Exclude nothing

        For more info, see:
        https://developer.android.com/guide/topics/data/autobackup
    -->
    
    <!-- Exclude shared preferences that contain sensitive data -->
    <exclude domain="sharedpref" path="user_session.xml" />
    
    <!-- Exclude database that contains sensitive data -->
    <exclude domain="database" path="hotel_database" />
    
    <!-- Include specific directories -->
    <include domain="sharedpref" path="app_settings.xml" />
    
</full-backup-content>