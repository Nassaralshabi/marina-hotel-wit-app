<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="4dp"
    app:cardElevation="2dp"
    app:cardCornerRadius="8dp"
    android:backgroundTint="@color/surface">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center_vertical">

        <!-- Priority Indicator -->
        <View
            android:id="@+id/priorityIndicator"
            android:layout_width="4dp"
            android:layout_height="30dp"
            android:layout_marginEnd="12dp"
            android:background="@color/danger" />

        <!-- Alert Content -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/alertText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="رسالة تنبيه هنا"
                android:textAppearance="@style/AppTextAppearance.BodyMedium"
                android:textColor="@color/text_primary"
                android:layout_marginBottom="4dp"
                tools:text="رسالة تنبيه هنا" />

            <TextView
                android:id="@+id/roomNumberText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="غرفة 101"
                android:textAppearance="@style/AppTextAppearance.BodySmall"
                android:textColor="@color/text_secondary"
                tools:text="غرفة 101" />

        </LinearLayout>

        <!-- Dismiss Button -->
        <ImageButton
            android:id="@+id/dismissButton"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/close"
            android:contentDescription="@string/desc_delete_button"
            android:padding="4dp" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>