<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".ui.fragments.PaymentFragment">

    <!-- Nested Scroll View for content -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Payment Summary Card -->
            <com.google.android.material.card.MaterialCardView
                style="@style/AppCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ملخص المدفوعات"
                        android:textAppearance="@style/AppTextAppearance.TitleLarge"
                        android:textColor="@color/text_primary"
                        android:layout_marginBottom="12dp" />

                    <!-- Total Amount -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/payment_total_amount"
                            android:textAppearance="@style/AppTextAppearance.Body"/>

                        <TextView
                            android:id="@+id/totalAmountText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0 $"
                            android:textAppearance="@style/AppTextAppearance.BodyMedium"
                            android:textColor="@color/text_primary" />

                    </LinearLayout>

                    <!-- Paid Amount -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/payment_paid_amount"
                            android:textAppearance="@style/AppTextAppearance.Body"/>

                        <TextView
                            android:id="@+id/paidAmountText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0 $"
                            android:textAppearance="@style/AppTextAppearance.BodyMedium"
                            android:textColor="@color/success" />

                    </LinearLayout>

                    <!-- Remaining Amount -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="16dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/payment_remaining_amount"
                            android:textAppearance="@style/AppTextAppearance.Body"
                            android:textStyle="bold"/>

                        <TextView
                            android:id="@+id/remainingAmountText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0 $"
                            android:textAppearance="@style/AppTextAppearance.TitleMedium"
                            android:textColor="@color/danger" />

                    </LinearLayout>

                    <!-- Checkout Button -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/checkoutButton"
                        style="@style/AppButton.Success"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:text="@string/payment_checkout_button"
                        android:enabled="false"
                        android:textAppearance="@style/AppTextAppearance.Label" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Add Payment Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="إضافة دفعة"
                android:textAppearance="@style/AppTextAppearance.TitleLarge"
                android:textColor="@color/text_primary"
                android:layout_marginBottom="16dp" />

            <!-- Payment Amount -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/paymentAmountLayout"
                style="@style/AppTextInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/payment_amount_hint"
                app:errorEnabled="true"
                android:layout_marginBottom="12dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/paymentAmountEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:maxLines="1" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Payment Method -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/paymentMethodLayout"
                style="@style/AppTextInput.Filled"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/payment_method_hint"
                android:layout_marginBottom="12dp">

                <AutoCompleteTextView
                    android:id="@+id/paymentMethodAutoComplete"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="none"
                    android:text="نقدي" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Payment Notes -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/paymentNotesLayout"
                style="@style/AppTextInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/payment_notes_hint"
                android:layout_marginBottom="16dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/paymentNotesEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textMultiLine"
                    android:maxLines="3"
                    android:minLines="2" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Add Payment Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/addPaymentButton"
                style="@style/AppButton.Primary"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="@string/payment_add_button"
                android:layout_marginBottom="20dp"
                android:textAppearance="@style/AppTextAppearance.Label" />

            <!-- Payment History -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/payment_history_title"
                android:textAppearance="@style/AppTextAppearance.TitleLarge"
                android:textColor="@color/text_primary"
                android:layout_marginBottom="12dp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/paymentsRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:listitem="@layout/item_payment" />

            <TextView
                android:id="@+id/noPaymentsText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/payment_no_history"
                android:textAppearance="@style/AppTextAppearance.Body"
                android:textColor="@color/text_hint"
                android:layout_gravity="center"
                android:layout_marginTop="32dp"
                android:visibility="gone" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <!-- Progress Bar -->
    <ProgressBar
        android:id="@+id/loadingProgressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:theme="@style/Theme.MarinaHotelManagement"
        android:visibility="gone" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>